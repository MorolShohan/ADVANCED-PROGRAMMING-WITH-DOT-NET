@{
    ViewBag.Title = "Home Page";
}

<main>
    @{
        int myVar = 1;
    }

    <div>
        @if (myVar == 3)
        {
            <h1>Hello, i'm from if block</h1>
        }
        else if (myVar == 1)
        {
            <h2>hello, im from else if block</h2>
        }
        else
        {
            <h3>im from else block</h3>
        }



    </div>
    <hr />
    <div>
        @(myVar==3? "condition is true" : "condition is false")
    </div>
    <div>
        @for (int i = 0; i <= 10; i++)
        {
            <div>
                <h1>Hello i am for loop for @i</h1> <br />
            </div>
        }
    </div>

    <hr />
    <div>
        @{ 
            var myList = new List<int>() { 1, 2, 3, 4, 5, 6, 7, 8, 9 };
        }
    </div>
    <div>
        @foreach (var obj in myList)
        {
            <div>
                <h1>Hello my value is @obj</h1> <br />
            </div>
        }
    </div>
</main>